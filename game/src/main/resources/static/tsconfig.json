{
  "compilerOptions": {
    "outDir": "./js",
    "rootDir": "./ts",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "ts/**/*"
  ]
}